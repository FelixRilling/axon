{
    "parser": "typescript-eslint-parser",
    "extends": "eslint:recommended",
    "plugins": [],
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jasmine": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": "warn",
        "indent": "off",
        "linebreak-style": "off"
    }
}
